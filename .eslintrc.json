{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "semi": ["error", "never"],
        "indent": ["error", 4],
        "prettier/prettier": [
            "error",
            {
                "semi": false,
                "singleQuote": true
            }
        ]
    }
}
